{
    "name": "devtoolkit/task-automation",
    "description": "Automated development tasks and workflow management",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "digital-solution-admin",
            "email": "admin@devtoolkit.local"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.0",
        "symfony/process": "^6.0",
        "symfony/filesystem": "^6.0",
        "guzzlehttp/guzzle": "^7.5",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "DevToolkit\\TaskAutomation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevToolkit\\TaskAutomation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src tests --level=5",
        "cs-check": "phpcs src tests",
        "cs-fix": "phpcbf src tests"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
